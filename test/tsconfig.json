{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "types": ["node", "jest"],
    "moduleResolution": "nodenext",
    "lib": ["esnext"],
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true
  }
}
